{
  "name": "@ssegning/multer-sharp-transform",
  "version": "0.1.10",
  "repository": "git@github.com:stephane-segning/multer-sharp-transform.git",
  "author": "Stephane Lambou <selastlambou@gmail.com>",
  "scripts": {
    "build": "rimraf build && tsc",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "dev": "tsnd --respawn src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "prepack": "npmignore --auto"
  },
  "main": "dist/index.js",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/mime-types": "^2.1.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.11",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "express": "^4.18.2",
    "http-status-codes": "^2.2.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "multer": "^1.4.5-lts.1",
    "npmignore": "^0.3.0",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "mime-types": "^2.1.35",
    "readable-stream-clone": "^0.0.7",
    "rxjs": "^7.8.0",
    "sharp": "^0.32.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "setupFiles": [
      "dotenv/config"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/tests/**/*spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverage": true
  },
  "publishConfig": {
    "ignore": [
      "*",
      "!dist/**/*",
      "!package.json",
      "!types.d.ts",
      "!yarn.lock"
    ]
  }
}
